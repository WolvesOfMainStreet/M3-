<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/useroverviewButtonAccounts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Accounts" />

    <Button
        android:id="@+id/useroverviewButtonSpendingreport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useroverviewButtonAccounts"
        android:layout_marginTop="10dp"
        android:text="Spending Report" />

    <Button
        android:id="@+id/useroverviewButtonIncomereport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/useroverviewButtonSpendingreport"
        android:layout_marginTop="10dp"
        android:text="Income Report" />

</RelativeLayout>
